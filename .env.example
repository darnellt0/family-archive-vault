# Google Drive Configuration
DRIVE_ROOT_FOLDER_ID=your_drive_folder_id_here
SERVICE_ACCOUNT_JSON_PATH=/path/to/service-account-key.json

# Local Storage (Windows paths for production, adjust for dev)
LOCAL_ROOT=F:\FamilyArchive
LOCAL_CACHE=${LOCAL_ROOT}\cache
LOCAL_DB_PATH=${LOCAL_ROOT}\db\archive.db
LOCAL_LOGS=${LOCAL_ROOT}\logs

# Intake Web App
INTAKE_HOST=0.0.0.0
INTAKE_PORT=8000
INTAKE_SECRET_KEY=change-this-to-a-random-secret-key
UPLOAD_MAX_SIZE_MB=5000
UPLOAD_CHUNK_SIZE_MB=10
RATE_LIMIT_PER_HOUR=100

# Contributor Tokens (add more as needed)
# Format: TOKEN=FolderName
TOKEN_aunt1=Aunt_1_UPLOADS
TOKEN_aunt2=Aunt_2_UPLOADS
TOKEN_aunt3=Aunt_3_UPLOADS
TOKEN_aunt4=Aunt_4_UPLOADS

# Worker Configuration
WORKER_POLL_INTERVAL_SECONDS=300
WORKER_BATCH_SIZE=10
USE_GPU=true
GPU_DEVICE_ID=0

# AI Feature Flags
ENABLE_FACE_DETECTION=true
ENABLE_CAPTIONS=true
ENABLE_CLIP_EMBEDDINGS=true
ENABLE_WHISPER=true

# Whisper Configuration
VIDEO_TRANSCRIBE_MAX_MINUTES=8
WHISPER_MODEL=base
WHISPER_DEVICE=cuda

# Face Detection
FACE_DETECTION_MODEL=buffalo_l
FACE_MIN_CONFIDENCE=0.6
FACE_CLUSTER_MIN_SAMPLES=3

# Image Processing
PHASH_DUPLICATE_THRESHOLD=5
THUMBNAIL_SIZE=800
VIDEO_POSTER_TIME_SECONDS=1

# Rosetta Stone
ROSETTA_GENERATION_TIME=03:00
ROSETTA_TIMEZONE=America/New_York

# Local Folder Sync
# Enable to automatically import media from a local folder
ENABLE_LOCAL_FOLDER_SYNC=false
LOCAL_SYNC_FOLDER=/path/to/your/photos/folder
LOCAL_SYNC_POLL_INTERVAL_SECONDS=60
LOCAL_SYNC_BATCH_SIZE=50
LOCAL_FOLDER_CONTRIBUTOR_TOKEN=local_uploads
# Set to true to delete originals after import (use with caution!)
LOCAL_SYNC_DELETE_AFTER_IMPORT=false
